<!DOCTYPE html>
<html ng-app="devhubApp">
  <head>
    <title>Devhub</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <script src="javascripts/angular.js"></script>
    <script src="javascripts/devhubapp.js"></script>
  </head>
  <body ng-controller="mainController">

  <div class="container-fluid">

    <div class="row">
      <div class= "text-center col-md-4 col-md-offset-4">
        <h1 id="title">Devhub Search</h1>
        <input type="text" ng-model="username" class="form-control" id="username" name="username" placeholder="Enter a Github username"/>
        <button id="search-btn" class="btn btn-primary btn-lg margin-top" ng-click="showme=true; search()">search</button>
      </div>
    </div>

    <div class="row margin-top" ng-show="showme">
      <div class= "col-md-6 col-md-offset-3">
        <ul class="list-group">
          <li class="list-group-item clearfix">
            <div class="row">
              <div class= "col-xs-6">
                <img class="img-thumbnail" src="{{user.avatar_url}}"/>
              </div>
              <div class= "col-xs-6">
                <h3>{{ user.login }}</h3>
                <p><strong>Repos:</strong> {{ user.public_repos }}</p>
                <p><strong>Followers:</strong> {{ user.followers }}</p>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>

  </div>

  </body>
</html>
